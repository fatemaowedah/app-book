<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../layout/head.ejs') %>
</head>

<body>
    <header>
        <%- include ('../layout/header.ejs') %>
    </header>
    <main>
        <h2>Hello World</h2>
        <% data.forEach(val =>{ %>
        <div class='div'>
            <img class="img" src="<%= val.image %>">
            <h2 class="title"><%= val.title %></h2>
            <ul>
                <%val.authors.forEach(value =>{%>
                <li class="authors"><%= value %></li>
                <%});%>
            </ul>
            <p class="description"><%= val.description %></p>
            <button class='detail'><a href="/details/<%=val.id%>"> detials</a></button>
        </div>
        <% });%>

    </main>
    <footer>
        
    </footer>
</body>

</html>